<!DOCTYPE html>

<head>
    <title>Parking Guide</title>
    <style>
@import url('https://fonts.googleapis.com/css2?family=Roboto&display=swap');
body {
    background-color: #E5E5E5;
}

.loc_box {
    /*---Box---*/
    position: fixed;
    /*width: 31%;
    height: 10%;*/
    width: 27%;
    height: 6%;
    padding: 1% 2% 1% 2%;
    left: 3%;
    top: 5%;
    background: #FFFFFF;
    box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
    border-radius: 24px;
    /*---Content---*/
    font-family: 'Roboto';
    font-weight: bold;
    font-size: 3.3vh;
    display: flex;
    align-items: center;
    color: #000000;
}

.QR_box {
    /*---Box---*/
    position: fixed;
    /*width: 29%;
    height: 49%;*/
    width: 25%;
    height: 41%;
    padding: 2% 2% 2% 2%;
    left: 4%;
    top: 19%;
    background: #FFFFFF;
    box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
    border-radius: 24px;
    /*---Content---*/
    text-align: center;
    font-family: 'Roboto';
    font-weight: bold;
    font-size: 3.3vh;
    color: #000000;
}

.status_box {
    /*Box*/
    position: fixed;
    width: 29%;
    height: 15%;
    padding: 2% 1% 2% 1%;
    left: 3%;
    top: 72%;
    background: #FFFFFF;
    box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
    border-radius: 24px;
    /*Content*/
    display: grid;
    grid: 33% 33% 33%/20% 70% 10%;
    grid-gap: 0px;
}

.status_box>div {
    line-height: 160%;
    font-family: 'Roboto';
    font-weight: bold;
    font-size: 2.5vh;
    color: #000000;
}

.mini_status_box {
    /*Box*/
    position: fixed;
    width: 4%;
    height: 10%;
    padding: 1% 1% 1% 1%;
    left: 90%;
    top: 5%;
    background: #FFFFFF;
    box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
    border-radius: 24px;
    display: grid;
    grid: 50% 50%/50% 50%;
    grid-gap: 0px;
}

.mini_status_box>div {
    line-height: 170%;
    font-family: 'Roboto';
    font-weight: bold;
    font-size: 2.3vh;
    color: #000000;
    text-align: center;
}


/*Map of the parking lot*/

.map {
    position: fixed;
    width: 55%;
    height: auto;
    top: 20%;
    left: 40%;
}


/*Parking spot*/

#spot1 {
    position: absolute;
    width: 22%;
    height: auto;
    top: 0%;
    left: 11.9%;
}

#spot2 {
    position: absolute;
    width: 22%;
    height: auto;
    top: 0%;
    left: 26.55%;
}

#spot3 {
    position: absolute;
    width: 22%;
    height: auto;
    top: 0%;
    left: 41.2%;
}

#spot4 {
    position: absolute;
    width: 22%;
    height: auto;
    top: 0%;
    left: 55.85%;
}

#spot5 {
    position: absolute;
    width: 22%;
    height: auto;
    top: 0%;
    left: 70.55%;
}</style>
</head>

<body>
    <div class=loc_box>
        Miniatur Tempat Parkir
    </div>
    <div class=QR_box>
        <img src="th.jpeg" width="90%" height="90%">
        <br>QR PETA
    </div>
    <div class=status_box>
        <div>
            <img src="check.svg" height=80% width=100%>
        </div>
        <div>
            Tempat Kosong
        </div>
        <div class=empty>
        </div>
        <div>
            <img src="error.svg" height=80% width=100%>
        </div>
        <div>
            Kendaraan Belum Parkir
        </div>
        <div class=searching>
        </div>
        <div>
            <img src="remove.svg" height=80% width=100%>
        </div>
        <div>
            Tempat Terisi
        </div>
        <div class=occupied>
        </div>
    </div>
    <div class=mini_status_box>
        <div class=empty>
        </div>
        <div>
            <img src="check.svg" height=80% width=100%>
        </div>
        <div class=searching>
        </div>
        <div>
            <img src="error.svg" height=80% width=100%>
        </div>
    </div>
    <div class=map>
        <img src="map.png" width="100%" height="100%">
        <div id="spot1"></div>
        <div id="spot2"></div>
        <div id="spot3"></div>
        <div id="spot4"></div>
        <div id="spot5"></div>
    </div>
</body>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
var empty = 3;
var searching = 2;
var occupied = 2;
var distancestatus1 = "green";
var distancestatus2 = "red";
var distancestatus3 = "green";
var distancestatus4 = "green";
var distancestatus5 = "red";

$(document).ready(function() {
    //distance Number
    $(".empty").text(empty);
    $(".searching").text(searching);
    $(".occupied").text(status1);

    //Parking Spot
    setInterval(()=> {
        if (distancestatus1 == "pressed") {
            $("#spot1").html("<img src='green.png' width='100%' height='100%'>");
        } else {
            $("#spot1").html("<img src='red.png' width='100%' height='100%'>");
        }

        if (distancestatus2 == "green") {
            $("#spot2").html("<img src='green.png' width='100%' height='100%'>");
        } else {
            $("#spot2").html("<img src='red.png' width='100%' height='100%'>");
        }

        if (distancestatus3 == "green") {
            $("#spot3").html("<img src='green.png' width='100%' height='100%'>");
        } else {
            $("#spot3").html("<img src='red.png' width='100%' height='100%'>");
        }

        if (distancestatus4 == "green") {
            $("#spot4").html("<img src='green.png' width='100%' height='100%'>");
        } else {
            $("#spot4").html("<img src='red.png' width='100%' height='100%'>");
        }

        if (distancestatus5 == "green") {
            $("#spot5").html("<img src='green.png' width='100%' height='100%'>");
        } else {
            $("#spot5").html("<img src='red.png' width='100%' height='100%'>");
        }
    },5000);
});
</script>
</html>
